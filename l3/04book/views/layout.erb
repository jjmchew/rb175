<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>

    <link type="text/css" rel="stylesheet" href="<%= B %>/stylesheets/pure-min.css">
    <link type="text/css" rel="stylesheet" href="<%= B %>/stylesheets/fonts.css">
    <link type="text/css" rel="stylesheet" href="<%= B %>/stylesheets/book_viewer.css">
</head>

<body>
  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Table of Contents</a>

              <ul class="pure-menu-list">
                <li class="pure-menu-item">
                  <% @toc.each_with_index do |title, idx| %>
                    <a href="<%= B %>/chapters/<%= idx + 1 %>" class="pure-menu-link"><%= title %></a>
                  <% end %>
                </li>
                <li class="pure-menu-item">
                  <a href="<%= B %>/search" class="pure-menu-link">Search</a>
                </li>
              </ul>
          </div>
      </div>

      <div id="main">
        <div class="header">
          <h1>The Adventures of Sherlock Holmes</h1>
          <h2>by Sir Arthur Doyle</h2>
        </div>

        <div class="content">
         <%= yield %>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="<%= B %>/javascripts/ui.js"></script>
</body>
</html>

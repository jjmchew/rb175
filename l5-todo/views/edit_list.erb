<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= @list[:id] %>/delete" method="post">
          <button class="delete" type="submit">Delete List
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list[:id] %>" method="post">
  <dl>
    <dt><label for="list_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list[:id] %>">Cancel</a>
  </fieldset>
</form>